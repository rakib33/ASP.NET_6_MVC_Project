@model ProductViewModel
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css">
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap4.min.js"></script>

<div id="col_select_div">
    <label>Select columns:</label><br>
    <input type="checkbox" data-column="0" checked> ID<br>
    <input type="checkbox" data-column="1" checked> Name<br>
    <input type="checkbox" data-column="2" checked> Age<br>
    <input type="checkbox" data-column="3" checked> Description
</div>

<table id="myTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>1</td>
            <td>Mike</td>
            <td>35</td>
            <td>...</td>
        </tr>
        <!-- Repeat rows as needed -->
        <tr>
            <td>2</td>
            <td>Mike</td>
            <td>35</td>
            <td>...</td>
        </tr>
    </tbody>
</table>


 <script>
$(document).ready(function() {
    var table = $('#myTable').DataTable(); // initialize

    $("input:checkbox").on("click", function(){
        var column = table.column( $(this).attr('data-column') );
        column.visible( ! column.visible() );
    });
});
</script>